# Output Plugin
rtmidi:out
	a lv2:Plugin,
		lv2:ConverterPlugin ;
	doap:name "RtMidi Output" ;
	doap:license lic:Artistic-2.0 ;
	lv2:project proj:rtmidi ;
	lv2:extensionData work:interface ;
	lv2:requiredFeature work:schedule ;
	lv2:optionalFeature lv2:isLive, lv2:hardRTCapable ;

	lv2:port [
		# input event port
	  a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports midi:MidiEvent ;
		lv2:designation lv2:control ;
		lv2:index 0 ;
		lv2:symbol "midi_out" ;
		lv2:name "Midi Out" ;
	] .

# Input Plugin
rtmidi:in
	a lv2:Plugin,
		lv2:ConverterPlugin ;
	doap:name "RtMidi Output" ;
	doap:license lic:Artistic-2.0 ;
	lv2:project proj:rtmidi ;
	lv2:extensionData work:interface ;
	lv2:requiredFeature work:schedule ;
	lv2:optionalFeature lv2:isLive, lv2:hardRTCapable ;

	lv2:port [
		# input event port
	  a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports midi:MidiEvent ;
		lv2:designation lv2:control ;
		lv2:index 0 ;
		lv2:symbol "midi_in" ;
		lv2:name "Midi In" ;
	] .
